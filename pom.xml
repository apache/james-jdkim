                <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-doap-plugin</artifactId>
                <configuration>
                <doapOptions>
                <programmingLanguage>java</programmingLanguage>
                <downloadPage>http://james.apache.org/download.cgi</downloadPage>
                </doapOptions>
